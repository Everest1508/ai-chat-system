# ====================
# Django Settings
# ====================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite by default, configure for PostgreSQL in production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_chat_db

# ====================
# Multi-Provider AI Support ⭐ NEW
# ====================

# Choose AI Provider: 'gemini', 'groq', 'cohere'
# RECOMMENDATION: Use 'groq' for best free tier (14,400 req/day)
AI_PROVIDER=groq

# Google Gemini
# Get key: https://makersuite.google.com/app/apikey
# Free: 60 requests/min, 1,500 requests/day
GEMINI_API_KEY=your-gemini-api-key-here
AI_MODEL=models/gemini-2.5-flash
EMBEDDING_MODEL=models/embedding-001

# Groq (RECOMMENDED - Best Free Tier!) ⭐
# Get key: https://console.groq.com/
# Free: 30 requests/min, 14,400 requests/day
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Cohere (Alternative)
# Get key: https://dashboard.cohere.com/
# Free trial: 100 requests/min
COHERE_API_KEY=your-cohere-api-key-here
COHERE_MODEL=command-r-08-2024

# Common AI Settings
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# Embedding Configuration
# Set to False to disable embeddings if quota exceeded
ENABLE_EMBEDDINGS=True
# Set to False to continue without embeddings on quota errors
EMBEDDINGS_REQUIRED=False

# ====================
# CORS Settings (for React frontend)
# ====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# JWT Settings (optional overrides)
# ====================
# JWT_ACCESS_TOKEN_LIFETIME=60
# JWT_REFRESH_TOKEN_LIFETIME=10080
